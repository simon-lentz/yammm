{
    "scopeName": "markdown.yammm.codeblock",
    "injectionSelector": "L:text.html.markdown",
    "patterns": [
        {
            "begin": "(^|\\G)(\\s*)(\\`{3,}|~{3,})\\s*(?i:(yammm))\\s*$",
            "beginCaptures": {
                "3": { "name": "punctuation.definition.markdown" },
                "4": { "name": "fenced_code.block.language.markdown" }
            },
            "end": "(^|\\G)(\\2|\\s{0,3})(\\3)\\s*$",
            "endCaptures": {
                "3": { "name": "punctuation.definition.markdown" }
            },
            "contentName": "meta.embedded.block.yammm",
            "patterns": [
                { "include": "source.yammm" }
            ]
        }
    ]
}
