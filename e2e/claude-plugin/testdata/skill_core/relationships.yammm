schema "skill_core_relationships"

// Source: SKILL.md, "Relationships" section (associations, compositions, edge props, reverse)

type Company {
    id UUID primary
    name String[1, 200] required
}

type Asset {
    id UUID primary
    value Float[0.0, _] required
}

part type Tag {
    label String[1, 50] required
}

type Employee {
    id UUID primary
    name String[1, 100] required
    --> WORKS_AT (one) Company {
        start_date Date required
        title String
    }
    --> OWNS (many) Asset / owned_by (one)
    *-> TAGS (_:many) Tag
}
