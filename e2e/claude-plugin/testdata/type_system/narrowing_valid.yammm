schema "type_system_narrowing_valid"

// Source: type-system.md, "Constraint Narrowing Rules"
// Tests valid narrowing: child re-declares parent properties with tighter bounds.

abstract type Base {
    age Integer[0, 150]
    name String[1, 100]
    score Float[0.0, 100.0]
}

type Restricted extends Base {
    id UUID primary
    age Integer[18, 120]
    name String[2, 50]
    score Float[0.0, 95.0]
}
