schema "type_system_narrowing_invalid"

// Source: type-system.md, "Invalid widening" example
// Tests that widening (expanding bounds beyond parent) is rejected as E_PROPERTY_CONFLICT.

abstract type Base {
    age Integer[0, 150]
    name String[1, 100]
}

type Invalid extends Base {
    id UUID primary
    age Integer[0, 200]
    name String[0, 100]
}
