schema "type_system_abstract_part"

// Source: type-system.md, "Abstract Types" and "Part Types" sections

abstract type Auditable {
    created_at Timestamp required
    updated_at Timestamp
    created_by String
}

abstract type Named {
    name String[1, 200] required
}

part type Address {
    street String[1, 200] required
    city String[1, 100] required
    postal_code String[3, 20] required
}

type Customer extends Auditable, Named {
    id UUID primary
    *-> ADDRESSES (_:many) Address
}
