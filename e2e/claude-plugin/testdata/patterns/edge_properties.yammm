schema "patterns_edges"

// Source: patterns.md, "Edge Property Patterns"

type Person {
    id UUID primary
    name String[1, 100] required
    --> KNOWS (_:many) Person {
        weight Float[0.0, 1.0] required
        since Date
    }
}

type Company {
    id UUID primary
    name String[1, 200] required
}

type Employee {
    id UUID primary
    name String[1, 100] required
    --> WORKS_AT (one) Company {
        start_date Date required
        end_date Date
        title String[1, 100]
        is_current Boolean required
    }
}
